<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools">

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@id/splash2"
        app:constraintSetStart="@id/splash1"
        app:duration="100" />

    <ConstraintSet android:id="@+id/splash1">
        <Constraint
            android:id="@id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/splash2">
        <Constraint
            android:id="@id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/splash3"
        app:constraintSetStart="@+id/splash2"
        app:duration="500">
        <KeyFrameSet>
            <KeyAttribute
                motion:attributeName="rotation"
                motion:framePosition="100"
                motion:motionTarget="@id/imageView"
                motion:value="50" />
            <KeyAttribute
                motion:attributeName="scaleX"
                motion:framePosition="100"
                motion:motionTarget="@id/imageView"
                motion:value="2" />
            <KeyAttribute
                motion:attributeName="scaleY"
                motion:framePosition="100"
                motion:motionTarget="@id/imageView"
                motion:value="2" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/splash3">
        <Constraint
            android:id="@id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:rotation="50"
            android:scaleX="2"
            android:scaleY="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/splash4"
        app:constraintSetStart="@+id/splash3"
        app:duration="1000">
        <KeyFrameSet>
            <KeyAttribute
                motion:attributeName="scaleX"
                motion:framePosition="100"
                motion:motionTarget="@id/imageView"
                motion:value="0.2" />
            <KeyAttribute
                motion:attributeName="scaleY"
                motion:framePosition="100"
                motion:motionTarget="@id/imageView"
                motion:value="0.2" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/splash4">
        <Constraint
            android:id="@id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="50"
            android:scaleX="0.4"
            android:scaleY="0.4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="194dp"
            android:alpha="0"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/title_app"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="@+id/logo"
            app:layout_constraintTop_toBottomOf="@+id/logo" />
    </ConstraintSet>

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/splash5"
        app:constraintSetStart="@+id/splash4"
        app:duration="1000">
        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="100"
                motion:motionTarget="@id/imageView"
                motion:percentX="1.0" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/splash5">
        <Constraint
            android:id="@id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:rotation="50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/title_app"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="194dp"
            android:alpha="1"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/title_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            app:layout_constraintStart_toStartOf="@id/logo"
            app:layout_constraintTop_toBottomOf="@+id/logo" />
    </ConstraintSet>
    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/splash6"
        app:constraintSetStart="@+id/splash5"
        app:duration="1000">
        <KeyFrameSet>
            <KeyAttribute
                motion:attributeName="scaleX"
                motion:framePosition="100"
                motion:motionTarget="@id/imageView"
                motion:value="10" />
            <KeyAttribute
                motion:attributeName="scaleY"
                motion:framePosition="100"
                motion:motionTarget="@id/imageView"
                motion:value="10" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/splash6">
        <Constraint
            android:id="@id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:scaleX="18"
            android:scaleY="18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="194dp"
            android:alpha="0"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/title_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="@id/logo"
            app:layout_constraintTop_toBottomOf="@+id/logo" />
    </ConstraintSet>

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/splash7"
        app:constraintSetStart="@+id/splash6"
        app:duration="1000" >
    </Transition>

    <ConstraintSet android:id="@+id/splash7">
        <Constraint
            android:id="@id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:scaleX="10"
            android:scaleY="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="148dp"
            android:alpha="1"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/title_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            app:layout_constraintEnd_toEndOf="@+id/logo"
            app:layout_constraintStart_toStartOf="@+id/logo"
            app:layout_constraintTop_toBottomOf="@+id/logo" >
            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="@color/white" />
        </Constraint>
        <Constraint
            android:id="@+id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            app:layout_constraintEnd_toEndOf="@+id/title_app"
            app:layout_constraintStart_toStartOf="@+id/title_app"
            app:layout_constraintTop_toBottomOf="@+id/title_app" >
            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="@color/white" />
        </Constraint>
        <Constraint
            android:id="@+id/btn_started"
            android:layout_width="273dp"
            android:layout_height="60dp"
            android:layout_marginTop="110dp"
            android:alpha="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/slogan" />
    </ConstraintSet>

</MotionScene>
